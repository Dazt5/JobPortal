<main class="contenedor">

    <form enctype="multipart/form-data" action="/editar-perfil" method="POST" class="default-form">
        <div class="campo">
            <label>Nombre</label>
            <input value="{{usuario.nombre}}" type="text" name="nombre" placeholder="Tu nombre" required>
        </div>

        <div class="campo">
            <label>E-mail</label>
            <input value="{{usuario.email}}" type="email" name="email" placeholder="Tu E-mail">
        </div>

        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Su password">
        </div>

        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen">
            <img src="uploads/profiles/{{usuario.imagen}}" class="admin-perfil" alt="">
        </div>

        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar Cambios">
        </div>

    </form>

</main>